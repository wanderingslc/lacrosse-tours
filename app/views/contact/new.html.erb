<div class="container">
  <div class="col-xs-12 container">
      <%= image_tag ('split_dodge_primary_wout_color.png'), class: 'col-md-3 col-xs-4' %>
      
  </div>
  <br>
  <div class="container">
    <h3>Tour Manager: Joe Prudden</h3>
    <h4>(801) 712-8935</h4>
  </div>
<br>
<%= form_for @message, :url => contact_path do |form| %>
  <fieldset class="fields container">
    <div class="field form-group">
      <%= form.label :name, class: "" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <br>
    <div class="field  form-group">
      <%= form.label :email, class: "" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <br>
    <div class="field form-group">
      <%= form.label :subject, class: "" %>
      <%= form.text_field :subject, class: "form-control" %>
    </div>
    <br>
    <div class="field form-group">
      <%= form.label :body, class: "" %>
      <%= form.text_area :body, class: "form-control" %>
    </div>
  </fieldset>
  <br>
  <div>
  <fieldset class="actions">
    <%= form.submit "Send", class: "btn btn-lg btn-primary col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" %>
  </fieldset>
</div>
  <br>
<% end %>
<br>
</div>